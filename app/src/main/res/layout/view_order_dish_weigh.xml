<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="300dp">
    <TextView
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:includeFontPadding="false"
        android:textSize="13sp"
        android:gravity="center"
        android:text="@string/waiter_weigh_tips"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <TextView
            android:layout_width="88dp"
            android:text="@string/waiter_weigh_tips1"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="1123"
            android:id="@+id/txt_quantity"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_dish_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TableLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/table_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showDividers="middle">

        <TableRow
            android:showDividers="middle">

            <TextView
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:id="@+id/tv_num_1"
                android:gravity="center"
                android:text="1"
                android:textSize="22sp" />

            <TextView
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:id="@+id/tv_num_2"
                android:gravity="center"
                android:text="2"
                android:textSize="22sp" />

            <TextView
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:id="@+id/tv_num_3"
                android:gravity="center"
                android:text="3"
                android:textSize="22sp" />

        </TableRow>

        <TableRow
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_num_4"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="4"
                
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_num_5"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="5"
                
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_num_6"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="6"
                
                android:textSize="22sp" />

        </TableRow>

        <TableRow
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_num_7"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="7"
                
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_num_8"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="8"
                
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_num_9"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="9"
                
                android:textSize="22sp"/>

        </TableRow>

        <TableRow
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_num_dot"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="."
                
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/tv_num_0"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="0"
                
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/img_waiter_change_price_reduce_money"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txt_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="center" />
</LinearLayout>