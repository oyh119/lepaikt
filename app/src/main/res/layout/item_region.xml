<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardElevation="3dp"
    android:padding="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            tools:text="W8888"
            android:layout_margin="6dp"
            android:textSize="26sp"
            android:includeFontPadding="false"
            android:id="@+id/txtRegionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/txtRegionName"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:layout_alignBaseline="@+id/txt_msg"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/txt_lock"
            android:layout_alignWithParentIfMissing="true"
            android:id="@+id/txt_wait"
            android:text="叫"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/ic_wait"
            android:textColor="#2e7d32"
            android:includeFontPadding="false"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <TextView
            android:layout_alignBaseline="@+id/txt_msg"
            android:textColor="#ebebeb"
            android:layout_margin="2dp"
            android:background="@drawable/ic_lock"
            android:layout_toLeftOf="@+id/txt_not_paid"
            android:layout_alignWithParentIfMissing="true"
            android:id="@+id/txt_lock"
            android:text="锁"
            android:gravity="center"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <TextView
            android:layout_alignBaseline="@+id/txt_msg"
            android:textColor="#b71c1c"
            android:layout_margin="2dp"
            android:id="@+id/txt_not_paid"
            android:text="付"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/ic_not_paid"
            android:layout_alignParentEnd="true"
            android:includeFontPadding="false"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/btnBmb"
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bmb_buttonEnum="ham"
        app:bmb_inList="true"/>
</android.support.v7.widget.CardView>
